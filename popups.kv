#:kivy 1.11.1

<ModbusPopup>:
    title: "Configurações MODBUS"
    size_hint: 0.4, None
    height: 200

    BoxLayout:
        id: layout
        orientation: 'vertical'

        GridLayout: 
            cols: 2
            rows: 2

            Label:
                text: "IP"
                font_size: 14

            TextInput:
                id: txt_ip
                text: "192.168.0.14"
                font_size: 14
                halign: 'center'
                valign: 'middle'

            Label:
                text: "Porta"
                font_size: 14

            TextInput:
                id: txt_port
                text: "502"
                font_size: 14
                halign: 'center'
                valign: 'middle'

        BoxLayout:
            orientation: 'horizontal'

            Button:
                id: connect_button
                text: "Conectar"
                size_hint_y: None
                height: 40 
                on_release: 
                    root.clearInfo()
                    app.root.connectOrDisconnect(txt_ip.text, int(txt_port.text))
                    #app.root.startDataRead(txt_ip.text, int(txt_port.text))
            
            Button:
                text: "Fechar"
                size_hint_y: None
                height: 40 
                on_release: 
                    root.dismiss()
                    root.clearInfo()


<ScanPopup>:
    title: "Configuração ScanTime"
    size_hint: 0.4, None
    height: 150

    BoxLayout:
        id: layout
        orientation: 'vertical'

        GridLayout: 
            cols: 2
            rows: 1

            Label:
                text: "ScanTime [ms]"
                font_size: 14

            TextInput:
                id: txt_st
                font_size: 14
                halign: 'center'
                valign: 'middle'

        BoxLayout:
            orientation: 'horizontal'

            Button:
                text: "Configurar"
                size_hint_y: None
                height: 40 
                on_release: app.root._scan_time = int(txt_st.text)
            
            Button:
                text: "Fechar"
                size_hint_y: None
                height: 40 
                on_release: root.dismiss()


